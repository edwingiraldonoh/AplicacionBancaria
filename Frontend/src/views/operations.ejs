<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Operaciones</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <a href="/">Cuentas</a> |
    <a href="/users">Usuarios</a> |
    <a href="/operations">Operaciones</a>
  </nav>
  <h1>Gestión de Operaciones</h1>
  <% if (loading) { %>
    <p>Cargando...</p>
  <% } %>
  <% if (error) { %>
    <p style="color:red"><%= error %></p>
  <% } %>
  <form action="/operations" method="POST" onsubmit="return validarOperacion(this)">
    <input type="text" name="name" placeholder="Nombre" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
    <input type="text" name="type" placeholder="Tipo" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
    <input type="number" name="usersId" placeholder="ID Usuario" min="1" required>
    <input type="number" name="accountId" placeholder="ID Cuenta" min="1" required>
    <button type="submit">Crear Operación</button>

    <div id="errorOperacion" style="color:red"></div>
  </form>
  <script>
    function validarOperacion(form) {
      let error = '';
      if (!form.name.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Nombre inválido. ';
      if (!form.type.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Tipo inválido. ';
      if (parseInt(form.usersId.value) < 1 || isNaN(parseInt(form.usersId.value))) error += 'ID Usuario inválido. ';
      if (parseInt(form.accountId.value) < 1 || isNaN(parseInt(form.accountId.value))) error += 'ID Cuenta inválido. ';
      document.getElementById('errorOperacion').innerText = error;
      return error === '';
    }
  </script>
  <table border="1">
    <thead>
      <tr>
  <th>ID</th>
  <th>Nombre</th>
  <th>Tipo</th>
  <th>ID Usuario</th>
  <th>ID Cuenta</th>
  <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% operaciones.forEach(operacion => { %>
        <tr>
          <td><%= operacion.id %></td>
          <td><%= operacion.name %></td>
          <td><%= operacion.type %></td>
          <td><%= operacion.usersId %></td>
          <td><%= operacion.accountId || operacion.account %></td>
          <td>
            <form action="/operations/update" method="POST" style="display:inline-block" onsubmit="return validarOperacionUpdate(this)">
              <input type="hidden" name="id" value="<%= operacion.id %>">
              <input type="text" name="name" value="<%= operacion.name %>" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
              <input type="text" name="type" value="<%= operacion.type %>" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
              <input type="number" name="usersId" value="<%= operacion.usersId %>" min="1" required>
              <input type="number" name="account" value="<%= operacion.accountId || operacion.account %>" min="1" required>
              <button type="submit">Actualizar</button>
              <div class="errorUpdate" style="color:red"></div>
            </form>
            <script>
              function validarOperacionUpdate(form) {
                let error = '';
                if (!form.name.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Nombre inválido. ';
                if (!form.type.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Tipo inválido. ';
                if (parseInt(form.usersId.value) < 1 || isNaN(parseInt(form.usersId.value))) error += 'ID Usuario inválido. ';
                if (parseInt(form.account.value) < 1 || isNaN(parseInt(form.account.value))) error += 'ID Cuenta inválido. ';
                form.querySelector('.errorUpdate').innerText = error;
                return error === '';
              }
            </script>
            <form action="/operations/<%= operacion.id %>/delete" method="POST" style="display:inline-block">
              <button type="submit" onclick="return confirm('¿Eliminar operación?')">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
