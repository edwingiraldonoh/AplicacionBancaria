<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Usuarios</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <a href="/">Cuentas</a> |
    <a href="/users">Usuarios</a> |
    <a href="/operations">Operaciones</a>
  </nav>
  <h1>Gestión de Usuarios</h1>
  <% if (loading) { %>
    <p>Cargando...</p>
  <% } %>
  <% if (error) { %>
    <p style="color:red"><%= error %></p>
  <% } %>
  <!-- Crear usuario -->
  <form action="/users" method="POST" onsubmit="return validarUsuario(this)">
    <input type="text" name="dni" placeholder="DNI" pattern="^[0-9]{10}$" title="DNI debe tener 10 números" required>
    <input type="text" name="name" placeholder="Nombre" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios" required>
    <input type="email" name="email" placeholder="Email" required>
    <input type="password" name="password" placeholder="Contraseña" minlength="8" title="Mínimo 8 caracteres" required>
    <button type="submit">Crear Usuario</button>
    <div id="errorUsuario" style="color:red"></div>
  </form>
  <script>
    function validarUsuario(form) {
      let error = '';
      if (!form.dni.value.match(/^[0-9]{10}$/)) error += 'DNI inválido. ';
      if (!form.name.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Nombre inválido. ';
      if (!form.email.value.match(/^.+@.+\..+$/)) error += 'Email inválido. ';
      if (form.password.value.length < 8) error += 'Contraseña muy corta. ';
      document.getElementById('errorUsuario').innerText = error;
      return error === '';
    }
  </script>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Email</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(usuario => { %>
        <tr>
          <td><%= usuario.id %></td>
          <td><%= usuario.name %></td>
          <td><%= usuario.email %></td>
          <td>
            <!-- Actualizar usuario -->
            <form action="/users/update" method="POST" style="display:inline-block" onsubmit="return validarUsuarioUpdate(this)">
              <input type="hidden" name="id" value="<%= usuario.id %>">
              <input type="text" name="dni" value="<%= usuario.dni %>" pattern="^[0-9]{10}$" title="DNI debe tener 10 números" required>
              <input type="text" name="name" value="<%= usuario.name %>" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
              <input type="email" name="email" value="<%= usuario.email %>" required>
              <input type="password" name="password" placeholder="Nueva contraseña" minlength="8" title="Mínimo 8 caracteres">
              <input type="number" name="account" value="<%= usuario.account %>">
              <button type="submit">Actualizar</button>
              <div class="errorUpdate" style="color:red"></div>
            </form>
            <script>
              function validarUsuarioUpdate(form) {
                let error = '';
                if (!form.dni.value.match(/^[0-9]{10}$/)) error += 'DNI inválido. ';
                if (!form.name.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Nombre inválido. ';
                if (!form.email.value.match(/^.+@.+\..+$/)) error += 'Email inválido. ';
                if (form.password.value && form.password.value.length < 8) error += 'Contraseña muy corta. ';
                form.querySelector('.errorUpdate').innerText = error;
                return error === '';
              }
            </script>
            <!-- Eliminar usuario -->
            <form action="/users/<%= usuario.id %>/delete" method="POST" style="display:inline-block">
              <button type="submit" onclick="return confirm('¿Eliminar usuario?')">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
