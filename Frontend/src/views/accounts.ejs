<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Cuentas Bancarias</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <a href="/">Cuentas</a> |
    <a href="/users">Usuarios</a> |
    <a href="/operations">Operaciones</a>
  </nav>
  <h1>Gestión de Cuentas Bancarias</h1>
  <% if (loading) { %>
    <p>Cargando...</p>
  <% } %>
  <% if (error) { %>
    <p style="color:red"><%= error %></p>
  <% } %>
  <form action="/accounts" method="POST" onsubmit="return validarCuenta(this)">
    <input type="text" name="accountNumber" placeholder="Número de Cuenta" pattern="^[0-9\s]{2,20}$" title="Solo números y espacios, mínimo 2" required>
    <input type="text" name="accountType" placeholder="Tipo de Cuenta" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
    <input type="text" name="saldo" placeholder="Saldo" pattern="^[0-9]{2,20}$" title="Solo números, mínimo 2" required>
    <select name="customerId" required>
      <option value="">Seleccione usuario</option>
      <% usuarios.forEach(usuario => { %>
        <option value="<%= usuario.id %>"><%= usuario.id %> - <%= usuario.name %></option>
      <% }) %>
    </select>
    <button type="submit">Crear Cuenta</button>
    <div id="errorCuenta" style="color:red"></div>
  </form>
  <script>
    function validarCuenta(form) {
      let error = '';
      if (!form.accountNumber.value.match(/^[0-9\s]{2,20}$/)) error += 'Número de cuenta inválido. ';
      if (!form.accountType.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Tipo de cuenta inválido. ';
      if (!form.saldo.value.match(/^[0-9]{2,20}$/)) error += 'Saldo inválido. ';
      if (!form.customerId.value || form.customerId.value === '') error += 'Debe seleccionar un usuario válido. ';
      document.getElementById('errorCuenta').innerText = error;
      return error === '';
    }
  </script>
  <table border="1">
    <thead>
      <tr>
  <th>ID</th>
  <th>Número de Cuenta</th>
  <th>Tipo de Cuenta</th>
  <th>Saldo</th>
  <th>ID Cliente</th>
  <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% cuentas.forEach(cuenta => { %>
        <tr>
          <td><%= cuenta.id %></td>
          <td><%= cuenta.accountNumber %></td>
          <td><%= cuenta.accountType %></td>
          <td><%= cuenta.saldo %></td>
          <td><%= cuenta.customerId || cuenta.usersId %></td>
          <td>
            <form action="/accounts/update" method="POST" style="display:inline-block" onsubmit="return validarCuentaUpdate(this)">
              <input type="hidden" name="id" value="<%= cuenta.id %>">
              <input type="text" name="accountNumber" value="<%= cuenta.accountNumber %>" pattern="^[0-9\s]{2,20}$" title="Solo números y espacios, mínimo 2" required>
              <input type="text" name="accountType" value="<%= cuenta.accountType %>" pattern="^[A-Za-zÀ-ÿ\s]{2,20}$" title="Solo letras y espacios, mínimo 2" required>
              <input type="text" name="saldo" value="<%= cuenta.saldo %>" pattern="^[0-9]{2,20}$" title="Solo números, mínimo 2" required>
              <select name="customerId" required>
                <option value="">Seleccione usuario</option>
                <% usuarios.forEach(usuario => { %>
                  <option value="<%= usuario.id %>" <%= (cuenta.customerId == usuario.id || cuenta.usersId == usuario.id) ? 'selected' : '' %>><%= usuario.id %> - <%= usuario.name %></option>
                <% }) %>
              </select>
              <button type="submit">Actualizar</button>
              <div class="errorUpdate" style="color:red"></div>
            </form>
            <script>
              function validarCuentaUpdate(form) {
                let error = '';
                if (!form.accountNumber.value.match(/^[0-9\s]{2,20}$/)) error += 'Número de cuenta inválido. ';
                if (!form.accountType.value.match(/^[A-Za-zÀ-ÿ\s]{2,20}$/)) error += 'Tipo de cuenta inválido. ';
                if (!form.saldo.value.match(/^[0-9]{2,20}$/)) error += 'Saldo inválido. ';
                if (!form.customerId.value || form.customerId.value === '') error += 'Debe seleccionar un usuario válido. ';
                form.querySelector('.errorUpdate').innerText = error;
                return error === '';
              }
            </script>
            <form action="/accounts/<%= cuenta.id %>/delete" method="POST" style="display:inline-block">
              <button type="submit" onclick="return confirm('¿Eliminar cuenta?')">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
